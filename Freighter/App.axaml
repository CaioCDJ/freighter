<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Freighter.App"
             xmlns:local="using:Freighter"
             RequestedThemeVariant="Default">
	<!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

	<Application.DataTemplates>
		<local:ViewLocator />
	</Application.DataTemplates>


	<Application.Resources>
		<SolidColorBrush x:Key="Base-100" Color="#0F1727" />
		<SolidColorBrush x:Key="Base-200" Color="#020611" />
		<SolidColorBrush x:Key="Text" Color="#d2d2d2" />
		<SolidColorBrush x:Key="Text-secondary" Color="#77758A"/>
		<SolidColorBrush x:Key="PrimaryColor" Color="#0DA4E9" />
		<SolidColorBrush x:Key="SuccessColor" Color="#21C45D" />
		<SolidColorBrush x:Key="ErrorColor" Color="#EF4444" />
	</Application.Resources>

	<Application.Styles>
		<FluentTheme />
		<StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml" />
		<StyleInclude Source="Styles/DefaultStyles.axaml" />
		<StyleInclude Source="Styles/tableStyles.axaml" />
	</Application.Styles>
</Application>